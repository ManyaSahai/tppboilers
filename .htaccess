# Enable Gzip Compression (makes files smaller for faster loading)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css application/javascript
  AddOutputFilterByType DEFLATE application/json image/svg+xml
</IfModule>

# Browser Caching (store files so they donâ€™t reload every visit)
<IfModule mod_expires.c>
  ExpiresActive On
  # Images: cache for 1 year
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  # CSS & JS: cache for 1 month
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Cache-Control headers (extra speed)
<IfModule mod_headers.c>
  <FilesMatch "\.(jpg|jpeg|png|gif|webp|css|js|ico|svg)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
</IfModule>
